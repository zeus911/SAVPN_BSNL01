<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <display-name>Customer Relation Portal</display-name>

  <servlet>
    <servlet-name>
      action
    </servlet-name>

    <servlet-class>
      org.apache.struts.action.ActionServlet
    </servlet-class>

     <init-param>
       <param-name>config</param-name>
       <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>

    <init-param>
      <param-name>login_success</param-name>
      <param-value>/layout/layout.jsp</param-value>
    </init-param>

    <init-param>
      <param-name>login_failure</param-name>
      <param-value>/loginError.jsp</param-value>
    </init-param>
	
	<init-param>
	  <param-name>mwfm_authenticator</param-name>
	  <param-value>//localhost:2000/wfm</param-value>
	</init-param>

    <init-param>
      <param-name>log_dir</param-name>
      <param-value>/var/opt/OV/ServiceActivator/tmp</param-value>
    </init-param>

    <init-param>
      <param-name>roles_file</param-name>
      <param-value>roles.xml</param-value>
    </init-param>

     <init-param>
      <param-name>recordsPerPage</param-name>
      <param-value>10</param-value>
    </init-param>

    <init-param>
      <param-name>template_dir</param-name>
      <param-value>/opt/HP/jboss/standalone/deployments/crm.ear/crm.war/forms</param-value>
    </init-param>

    <!-- Synchronisation parameters -->

    <init-param>
      <param-name>request_synchronisation</param-name>
      <param-value>true</param-value>
    </init-param>

    <init-param>
      <param-name>socketListener_port</param-name>
      <param-value>3099</param-value>
    </init-param>

    <init-param>
      <param-name>socketListener_host</param-name>
      <param-value>172.30.8.78</param-value>
    </init-param>

    <init-param>
      <param-name>Sync_Listener_port</param-name>
      <param-value>4099</param-value>
    </init-param>
	
	<init-param>
      <param-name>DB_Failure_test</param-name>
      <param-value>false</param-value>
    </init-param>

    <init-param>
      <param-name>debug</param-name>
      <param-value>2</param-value>
    </init-param>

    <init-param>
      <param-name>detail</param-name>
      <param-value>2</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>
    
  </servlet>

   <!-- Standard Action Servlet Mapping -->
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

    <!-- Configure how long a session can be inactive value is in minutes -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>


  <!-- Mime Mappings -->
  <mime-mapping>
    <extension>.js</extension>
    <mime-type>text/javascript</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>.css</extension>
    <mime-type>text/css</mime-type>
  </mime-mapping>

   <!-- Welcome Files -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- error page -->
  <error-page>
    <error-code>404</error-code>
    <location>/loginError.jsp</location>
  </error-page>

   <!-- data sources -->
 <resource-ref>
	<res-ref-name>jdbc/crmDB</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
  </resource-ref>

</web-app>
